{
  "name": "bridge-mutual.contracts",
  "version": "1.0.0",
  "license": "GPL-3.0",
  "author": "BridgeMutual R&D Team",
  "description": "",
  "scripts": {
    "private-network": "ganache-cli",
    "test": "truffle test",
    "test:coverage": "truffle run coverage",
    "compile": "truffle compile",
    "develop": "truffle develop",
    "lint-js": "eslint ./",
    "lint-sol": "solhint 'contracts/**/*.sol'",
    "lint-js:fix": "eslint *.js ./ --fix",
    "lint-sol:fix": "solhint 'contracts/**/*.sol' --fix"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^3.2.1-solc-0.7",
    "@openzeppelin/test-helpers": "^0.5.10",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "truffle": "5.1.61"
  },
  "devDependencies": {
    "dotenv": "^8.1.0",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-editorconfig": "^2.1.3",
    "eslint-plugin-import": "^2.20.1",
    "eth-gas-reporter": "^0.2.19",
    "ganache-cli": "^6.7.0",
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "prettier-plugin-solidity": "^1.0.0-beta.2",
    "solhint": "^3.3.2",
    "solidity-coverage": "^0.7.1",
    "truffle-assertions": "^0.9.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "yarn lint-js:fix"
    ],
    "*.sol": [
      "prettier --write",
      "yarn lint-sol:fix"
    ]
  }
}
